<div class="col-md-6">
	<div class="portlet box green">
		<div class="portlet-title">
			<div class="caption">Create Image</div>
		</div>
		<div class="portlet-body form">
			<%= form_for([:admin, @image], html: {class: 'form-horizontal'}) do |f| %>
			<div class="form-body">
				  <% if @image.errors.any? %>
				  <div id="errors">
				    <h2><%= pluralize(@image.errors.count, "error") %> prohibited
				        this post from being saved:</h2>
				    <ul>
				    <% @image.errors.full_messages.each do |msg| %>
				      <li><%= msg %></li>
				    <% end %>
				    </ul>
				  </div>
				  <% end %>
				 
				  <div class="form-group">
				    <%= f.label :name, {class: 'col-md-3 control-label'} %>
				    <div class="col-md-6">
				    	<%= f.text_field :name, {class: 'form-control'} %>
				    </div>
				  </div>
				  <div class="form-group">
				    <%= f.label :hosting, {class: 'col-md-3 control-label'} %>
				    <div class="col-md-6">
				    	<%= f.text_field :hosting, {class: 'form-control'} %>
				    </div>
				  </div>
				  <div class="form-group">
				    <%= f.label :remote_image_id, {class: 'col-md-3 control-label'} %>
				    <div class="col-md-6">
				    	<%= f.text_field :remote_image_id, {class: 'form-control'} %>
				    </div>
				  </div>
				  <div class="form-group">
				    <%= f.label :region_slug_do, {class: 'col-md-3 control-label'} %>
				    <div class="col-md-6">
				    	<%= f.text_field :remote_slug_do, {class: 'form-control', value: 'nyc2'} %>
				    </div>
				  </div>
				  <div class="form-group">
				    <%= f.label :ram, {class: 'col-md-3 control-label'} %>
				    <div class="col-md-6">
				    	<%= f.text_field :ram, {class: 'form-control'} %>
				    </div>
				  </div>
				  <div class="form-group">
				    <%= f.label :price, {class: 'col-md-3 control-label'} %>
				    <div class="col-md-6">
				    	<%= f.text_field :price, {class: 'form-control'} %>
				    </div>
				  </div>
				  <div class="form-group">
				    <%= f.label :description, {class: 'col-md-3 control-label'} %>
				    <div class="col-md-6">
				    	<%= f.text_area :description, {class: 'form-control'} %>
				    </div>
				  </div>
				  <div class="form-actions fluid">
				    <div class="col-md-offset-3 col-md-9">
				    	<%= f.button 'Submit', {type: 'submit', class: 'btn green'} %>
				    </div>
				  </div>
			  </div>
			<% end %>
		</div>
	</div>
</div>
